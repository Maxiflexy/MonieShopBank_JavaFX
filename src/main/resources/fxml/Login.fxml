<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="login_container" stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maxiflexy.monieshopbank.controllers.LoginController">
   <VBox prefHeight="400.0" prefWidth="200.0" styleClass="login_logo_container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
      <FontAwesomeIconView glyphName="BANK" size="30" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="MonieShop Bank" />
   </VBox>
   <VBox layoutX="216.0" layoutY="50.0" prefHeight="350.0" prefWidth="350.0" styleClass="login_form_container" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <Label id="choice-prompt-text" text="Choose Your Account Type" />
      <ChoiceBox fx:id="acc_selector" prefWidth="150.0" styleClass="account_selector" />
      <Label fx:id="payee_address_lbl" text="Payee Address:">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
      <TextField fx:id="payee_address_fld" styleClass="input_field" />
      <Label text="Password">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
      <TextField fx:id="password_fld" styleClass="input_field" />
      <Button fx:id="login_btn" mnemonicParsing="false" text="Button" />
      <Label fx:id="error_lbl" styleClass="error_lbl" text="Error" />
   </VBox>
</AnchorPane>
